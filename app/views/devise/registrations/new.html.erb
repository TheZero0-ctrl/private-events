<div class="flex items-center justify-center min-h-screen">
  <div class="px-8 py-6 mx-4 mt-4 text-left bg-cyan-200 shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
    <h3 class="text-2xl font-bold text-center text-cyan-900">Sign Up</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-[20px]">
        <%= f.label :username, class: "block text-cyan-900" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true %>
      </div>

      <div class="mb-[20px]">
        <%= f.label :email,class: "block text-cyan-900" %><br />
        <%= f.email_field :email, autocomplete: "email", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600",required:true %>
      </div>

      <div class="mb-[20px]">
        <%= f.label :password,class: "block text-cyan-900" %>
        <% if @minimum_password_length %>

        <div class="text-cyan-900"><em>(<%= @minimum_password_length %> characters minimum)</em></div>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600",required:true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block text-cyan-900" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600",required:true %>
      </div>

      <div class="flex">
        <%= f.submit "Sign up", class:"w-full px-6 py-2 mt-4 text-white bg-cyan-600 rounded-lg hover:bg-cyan-800" %>
      </div>
      <div class="mt-6 text-grey-dark">
        Already have an account?
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
