
<div class="flex items-center justify-center min-h-screen">
  <div>
    <p>use below login information for test:</p>
    <p>email: testuser1@mail.com</p>
    <p>password: 123456</p>
  </div>
  <div class="px-8 py-6 mx-4 mt-4 text-left bg-cyan-200 shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
    <h3 class="text-2xl font-bold text-center text-cyan-900">Log In</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-[20px]">
        <%= f.label :email, class: "block text-cyan-900" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true  %>
      </div>

      <div class="mb-[20px]">
        <%= f.label :password, class: "block text-cyan-900" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-[20px]">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-cyan-900" %>
        </div>
      <% end %>

      <div class="flex">
        <%= f.submit "Log in", class:"w-full px-6 py-2 mt-4 text-white bg-cyan-600 rounded-lg hover:bg-cyan-800" %>
      </div>

      <div class="mt-6 text-grey-dark">
        Don't have an account?
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

