<div class="flex items-center justify-center min-h-screen">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-cyan-200 shadow-lg md:w-1/3 lg:w-1/3 sm:w-1/3">
        <h3 class="text-2xl font-bold text-center text-cyan-900">Create Event</h3>
        <%= form_with model: @event do |form| %>
            <% if @event.errors.any? %>
                <div style="color: red">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                    <% @event.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>

            <div class="mb-[20px]">
                <h4><%= form.label :title,class: "block text-cyan-900" %></h4>
                <%= form.text_field :title, class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true %>
            </div>
            
            <div class="mb-[20px]">
                <h4><%= form.label :description,class: "block text-cyan-900" %></h4>
                <%= form.text_area :description, class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true %>
            </div>

            <div class="mb-[20px]">
                <h4><%= form.label :location,class: "block text-cyan-900" %></h4>
                <%= form.text_field :location, class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true %>
            </div>

            <div class="mb-[20px]">
                <h4><%= form.label :event_date, "Date",class: "block text-cyan-900"%></h4>
                <%= form.date_field :event_date, class:"w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", required:true%>
            </div>

            <div class="flex">
                <%= form.submit class: "w-full px-6 py-2 mt-4 text-white bg-cyan-600 rounded-lg hover:bg-cyan-800"%>
            </div>
        <% end %>
    </div>
</div>